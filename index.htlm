    <title>Orden de Pedido - El Chante</title>
    <style>
        /* --- Estilos Generales (Rojo Oscuro) --- */
        body {
            font-family: 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            line-height: 1.6; margin: 0; padding: 20px; background-color: #3b1e1e; color: #f0f0f0;
        }
        .container {
            max-width: 750px; margin: 20px auto; background: #4d2a2a; padding: 30px;
            border-radius: 12px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5); border: 1px solid #6a3a3a;
        }
        h1 { color: #e55c20; text-align: center; margin-bottom: 15px; font-weight: 600; font-size: 2.2em; }
        h2 { color: #f0a549; text-align: center; margin-bottom: 35px; font-size: 1.4em; font-weight: 400; }
        .seccion-formulario { margin-bottom: 35px; border-bottom: 1px solid #6a3a3a; padding-bottom: 25px; }
        .seccion-formulario:last-of-type { border-bottom: none; }
        .seccion-formulario h3 { color: #e55c20; border-bottom: 2px solid #e55c20; padding-bottom: 8px; margin-bottom: 20px; font-size: 1.3em; font-weight: 500; }
        .campo-cliente { margin-bottom: 15px; }
        .campo-cliente label { display: block; margin-bottom: 5px; font-weight: 500; color: #d0d0d0; }
        .campo-cliente input[type="text"], .campo-cliente input[type="tel"] {
            width: 100%; padding: 10px; border: 1px solid #7d4a4a; border-radius: 6px;
            background-color: #5c3a3a; color: #f0f0f0; font-size: 1em; box-sizing: border-box;
        }
        .campo-cliente input[type="text"]:focus, .campo-cliente input[type="tel"]:focus { outline: none; border-color: #f0a549; box-shadow: 0 0 5px rgba(240, 165, 73, 0.5); }
        .item-menu { display: flex; flex-wrap: wrap; justify-content: space-between; align-items: center; margin-bottom: 15px; padding: 15px; border: 1px solid #6a3a3a; border-radius: 8px; background-color: #553535; transition: background-color 0.3s ease, box-shadow 0.3s ease; }
        .item-menu:hover { background-color: #6a4545; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4); }
        .item-info { flex-grow: 1; margin-right: 15px; flex-basis: 60%; min-width: 200px; }
        .item-info .nombre-principal { display: block; font-weight: 500; font-size: 1.05em; color: #ffffff; margin-bottom: 3px; }
        .item-info .descripcion { display: block; font-size: 0.85em; color: #c0c0c0; }
        .item-precio { font-weight: bold; color: #f0a549; min-width: 70px; text-align: right; font-size: 1.1em; margin-left: 10px; flex-basis: 15%; }
        .item-cantidad { display: flex; align-items: center; margin-left: 15px; flex-basis: 20%; min-width: 100px; }
        .item-cantidad label { margin-right: 8px; font-size: 0.9em; color: #d0d0d0; }
        .item-cantidad input[type="number"] { width: 65px; padding: 8px; text-align: center; border: 1px solid #7d4a4a; border-radius: 6px; background-color: #5c3a3a; color: #f0f0f0; font-size: 1em; -moz-appearance: textfield; }
        .item-cantidad input[type="number"]:focus { outline: none; border-color: #f0a549; box-shadow: 0 0 5px rgba(240, 165, 73, 0.5); }
        input::-webkit-outer-spin-button, input::-webkit-inner-spin-button { -webkit-appearance: none; margin: 0; }
        #notas-container label { display: block; margin-bottom: 10px; font-weight: 500; color: #d0d0d0; }
        #notas { width: 100%; padding: 10px; border: 1px solid #7d4a4a; border-radius: 6px; background-color: #5c3a3a; color: #f0f0f0; font-size: 0.95em; box-sizing: border-box; min-height: 80px; resize: vertical; }
        #notas:focus { outline: none; border-color: #f0a549; box-shadow: 0 0 5px rgba(240, 165, 73, 0.5); }
        #generar-pedido { /* Estilo botón principal */
