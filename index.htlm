        modalOverlay.style.display = 'none';
    }

    // Event listener para el botón principal "Revisar Pedido"
    botonGenerar.addEventListener('click', () => {
        divError.style.display = 'none'; divError.textContent = ''; // Ocultar error previo
        const clienteNombre = campoNombre.value.trim();
        const clienteTelefono = campoTelefono.value.trim();

        // --- Validaciones (igual que antes) ---
        if (!clienteNombre) { mostrarError('Por favor, ingresa tu nombre.'); campoNombre.focus(); return; }
        if (!clienteTelefono) { mostrarError('Por favor, ingresa tu número de teléfono.'); campoTelefono.focus(); return; }
        const telefonoPattern = /^[0-9]{4}-?[0-9]{4}$/;
        if (!telefonoPattern.test(clienteTelefono)) { mostrarError('Por favor, ingresa un número de teléfono válido (Ej: 8888-8888 o 88888888).'); campoTelefono.focus(); return; }

        // --- Construcción del Mensaje (igual que antes) ---
        let mensaje = `*Pedido para:* ${clienteNombre}\n*Teléfono:* ${clienteTelefono}\n--------------------\n`;
        mensaje += '¡Hola El Chante! Quisiera hacer el siguiente pedido:\n';
        let totalPedido = 0;
        let hayItems = false;
        const inputsCantidad = formulario.querySelectorAll('input[type="number"]');

        inputsCantidad.forEach(input => {
            const cantidad = parseInt(input.value);
            if (cantidad > 0) {
                hayItems = true;
                const nombre = input.getAttribute('data-nombre');
                const precio = parseFloat(input.getAttribute('data-precio'));
                mensaje += `\n- ${cantidad} x ${nombre}`;
                totalPedido += cantidad * precio;
            }
        });

         if (!hayItems) {
            mostrarError('Por favor, selecciona la cantidad de al menos un producto.');
            const primerInputCantidad = formulario.querySelector('.item-cantidad input[type="number"]');
            if(primerInputCantidad) primerInputCantidad.focus();
            return;
        }

        const notas = campoNotas.value.trim();
        if (notas) { mensaje += `\n\n*Notas Adicionales:* ${notas}`; }

        const totalFormateado = totalPedido.toLocaleString('es-CR', { style: 'currency', currency: 'CRC' });
        mensaje += `\n\n--------------------`;
        mensaje += `\n*Total Aproximado:* ${totalFormateado}`;

        const sinpeNumero = numeroWhatsApp.slice(-8);
        const sinpeFormateado = `${sinpeNumero.slice(0, 4)}-${sinpeNumero.slice(4)}`;
        mensaje += `\n\nPuedes pagar por *SINPE Móvil* al: *${sinpeFormateado}*`;
        mensaje += '\n\n¡Gracias por su pedido!';

        // --- Mostrar el Modal ---
        modalTextoResumen.textContent = mensaje; // Poner el texto en el <pre> del modal
        const mensajeCodificado = encodeURIComponent(mensaje);
        const urlWhatsApp = `https://wa.me/${numeroWhatsApp}?text=${mensajeCodificado}`;
        modalBotonEnviar.href = urlWhatsApp; // Asignar URL al botón de enviar del modal

        modalOverlay.style.display = 'flex'; // Mostrar el modal (usando flex para centrar)
    });

    // Event listeners para cerrar el modal
    modalBotonCerrar.addEventListener('click', cerrarModal);
    modalBotonX.addEventListener('click', cerrarModal); // Cerrar con la X

    // Event listener para cerrar el modal al hacer clic fuera de él (en el overlay)
    modalOverlay.addEventListener('click', (event) => {
        // Si el clic fue directamente en el overlay (fondo oscuro) y no en el contenido del modal
        if (event.target === modalOverlay) {
            cerrarModal();
        }
    });

     // Event listener para el botón de enviar del modal (opcional: cerrar modal después de enviar)
     modalBotonEnviar.addEventListener('click', () => {
         // Pequeña demora para asegurar que el enlace de WhatsApp se abra antes de cerrar el modal
         setTimeout(cerrarModal, 300);
     });

</script>

</body>
</html>
